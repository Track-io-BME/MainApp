<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_background"
    android:paddingTop="0dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:layout_margin="2dp">


    <TextView
        android:id="@+id/tvChallengeDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/trebucbd"
        android:hint="@string/daily"
        android:paddingVertical="8dp"
        android:paddingLeft="8dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/trebucbd"
        android:hint="Walk for 1000 km"
        android:paddingVertical="8dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvChallengeDuration"
        app:layout_constraintStart_toEndOf="@+id/tvChallengeDuration"
        app:layout_constraintTop_toTopOf="@+id/tvChallengeDuration" />

    <TextView
        android:id="@+id/tvStartDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/trebucbd"
        android:hint="2022-22-22"
        android:paddingVertical="8dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvChallengeDuration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvChallengeDuration" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active until"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/tvStartDate"
        app:layout_constraintEnd_toEndOf="@+id/tvStartDate"
        app:layout_constraintStart_toStartOf="@+id/tvStartDate" />

</androidx.constraintlayout.widget.ConstraintLayout>